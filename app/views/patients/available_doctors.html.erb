<%= form_tag '#' do %>
		<div class="form-group col-md-">
		<div class="control-label">
			<%= label_tag :date %>
			</div>
      <%= text_field_tag :booking_date,params[:booking_date], class: "form-control datepicker"%>		
		</div>
    <div class="col-md-10">	
      <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
        <i class="fa fa-search"></i> Update
      <% end %>
    </div>
  </div>
<% end %> 

<table class="table table-stripped">
	<thead>
		<tr>
			<th>Doctors Available</th>
		</tr>
    <tr>
    	<th>Name</th>
    	<th>Actions</th>
    </tr>
	</thead>
	<tbody>
		<% @doctors.each do |doctor| %>
			<tr>
				<td><%= doctor.name %></td>
				<td><%= link_to 'Book', new_doctor_patient_path(patient: current_patient,doctor: doctor.id) ,       	 class: "btn btn-xs btn-success"%></td>
			</tr>
		<% end %>
	</tbody>
</table>