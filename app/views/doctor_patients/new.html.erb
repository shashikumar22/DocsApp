<h3>Booking info</h3>

<%= form_tag(doctor_patients_path, method: "post") do %>
  <div class="row">
		<div class="form-group col-md-4">
			<div class="control-label">
			  <%= label_tag :doctor_Name %>
			</div>
			<%= text_field_tag :doc_name, @doctor.first_name, :readonly => true, class: "form-control"%>
		</div>
  </div>
  <div class="row">
		<div class="form-group col-md-4">
		<div class="control-label">
			<%= label_tag :date %>
			</div>
      <%= text_field_tag :booking_date, params[:booking_date],	 :readonly => true, class: "form-control"%>		
		</div>
  </div>
  <div class="row">
    <div class="col-md-4">	
      <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
        <i class="fa fa-search"></i> Book
      <% end %>
    </div>
  </div>
  </div>
<% end %> 